infoMsg "running $(basename $mod)"

COLUMNS=1
select _env in common tomcat jboss
do
        case "$_env" in
                common|tomcat|jboss) 
                        infoMsg "Erstelle ${_env^^}-System"
                        g_environment=$_env
                        break
                        ;;
                * )
                        infoMsg "Bitte gÃ¼ltige Option angeben"
                        continue
                        ;; 
        esac
done 2>&20
